  /* Mobile responsive changes */
  @media (max-width: 768px) {
      .custom-dialog-box {
          top: auto;
          bottom: 0;
          left: 0;
          transform: none;
          width: 100%; /* Full width on mobile */
          border-radius: 10px 10px 0 0; /* Rounded corners at the top */
          max-width: 100%; /* Remove max width on mobile */
      }
  }

  /* Dialog box content (image + title) styling */
  .custom-dialog-content {
      display: flex;
      align-items: center;
      gap: 1rem; /* Space between image and title */
      {% comment %} justify-content: center; /* Center them horizontally */ {% endcomment %}
      margin-bottom: 1rem; /* Space below the content */
  }

  .custom-dialog-box img {
      max-width: 80px; /* Limit width of the image */
      height: auto; /* Maintain aspect ratio */
      border-radius: 10px; /* Round the corners slightly */
  }

  .custom-dialog-title {
      font-size: 1.8rem; /* Larger font size for the title */
      color: #333;
      font-weight: bold;
      margin: 0; /* Remove margin for cleaner spacing */
  }

  /* Styling for the paragraph below the title */
  .custom-dialog-message {
      font-size: 1.5rem; /* Regular font size for the message */
      color: #666;
      margin-top: 0.5rem; /* Space between title and paragraph */
  }

  /* Additional button styling */
  button {
      background-color: transparent;
      border: none;
      cursor: pointer;
  }

  button:hover {
      opacity: 0.8;
  }

  .custom-dialog-overlay {
    display: none; /* Hidden by default */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px); /* For Safari */
    z-index: 999;
  }

  /* Fallback for browsers that don't support backdrop-filter */
  @supports not (backdrop-filter: blur(4px)) {
    .dialog-overlay {
