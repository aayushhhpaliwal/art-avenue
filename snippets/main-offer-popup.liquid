<script>
    function showCopyNotification() {
        const notification = document.getElementById('copyNotification');
        notification.style.display = 'block';
        
        // Hide the notification after 2 seconds
        setTimeout(() => {
            notification.style.display = 'none';
        }, 2000);
    }

    document.getElementById('copy1').addEventListener('click', function() {
        const couponText = document.getElementById('coupon1').textContent;
        navigator.clipboard.writeText(couponText).then(function() {
            showCopyNotification();
        }).catch(function(err) {
            console.error('Failed to copy text: ', err);
        });
    });

    document.getElementById('copy2').addEventListener('click', function() {
