<meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
    <link rel="stylesheet" href="./style.css">

  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  >
  <style>
              .slick-slider .element{
              height: auto;
            /*   width:150px!important; */
            /*   background-color:#000; */

              border-radius:5px;
              display:inline-block;
              margin:0px 10px;
              display:flex;
              justify-content:center;
              align-items:center;
              font-size:20px;
                border-radius: 50%;
                display:block;
                font-family: Montserrat,sans-serif;
            }
            .slick-slider .slick-disabled {
              opacity : 0;
              pointer-events:none;
            }
              .main_heading{
                  width: 66%;
              margin: 25px auto;
              }
            .rjslick{
              width: 100%;
              margin: 10px auto;
                  padding-top: 5px;
            }
              .rjslickimg{
                width:100%;
                /* border-radius: 50%; */
                padding:5px;
                  transform: scale(1);
              transition: all 0.3s;
              }
              .rjslickimg:hover {
              transform: scale(1.1);
            }
              .h1_heading{
                font-size: 15px;
                    font-weight: 700;
                font-family: Montserrat,sans-serif;
                color:{{section.settings.collection_clr}}
              }
              .slick-next{
                    right: 0px;
                position: absolute;

              }
              .slick-prev{
                    position: absolute;
                left: 0px;

              }
              .main_heading{
                text-align:{{section.settings.textalign}};
                font-family: Montserrat,sans-serif;
                color:{{section.settings.clr}}
              }
              .rdbr{
                    border: 2px solid #ffffff;
    /* border-radius: 50%; */
    box-shadow: inset 0 0 6px 0px #7B3F00;
              }
              @media only screen and (max-width: 600px){

                .rjslick{
                  width: 100%;
                }
              .slick-slider  .element{
                 height: auto!important;
                      width: 88px!important;

                }
                .rjslickimg{
                width:100%;
              }
                  .h1_heading{
                font-size: 11px;

              }
                 .main_heading{
                  width: 90%;
              margin: 10px auto;
              }
                .main_heading {
      font-size: 25px;
    }
              }
            .next-arrow {
          display: inline-block;
          position: absolute;
          top: 50%;
          transform: translatey(-50%);
          right: 5px;
          /* background: white; */
          border: white;
          font-size: 26px;
         padding: 10px;
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    border-radius: 50%;
    width: 50px;
              display:none;
        }
        .prev-arrow {
          display: inline-block;
          position: absolute;
          top: 50%;
          transform: translatey(-50%);
          left: 5px;
          /* background: white; */
          border: none;
          padding: 10px;
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    border-radius: 50%;
    width: 50px;
          font-size: 26px;
          display:none;
        }

        @media only screen and (max-width: 600px) {
          .next-arrow {
            font-size: 26px;
            right: -15px;
          }
          .prev-arrow {
            font-size: 26px;
            left: -15px;
          }
        }
  </style>
  <body>
    <!-- partial:index.partial.html -->
    <h1 class="main_heading">{{ section.settings.headtext }}</h1>
    <div class="slick-slider rjslick page-width">
      {%- for block in section.blocks -%}
        <div class="element element-1">
          <div class="rdbr">
            <a href="{{ block.settings.url }}"
              ><img class="rjslickimg" src="{{ block.settings.imgpic | img_url:'medium'}}">
            </a>
          </div>
          <h1 class="h1_heading" style="text-align:{{block.settings.descriptionalign}};">
            {{ block.settings.collhed }}
          </h1>
        </div>
      {% endfor %}
    </div>

    <!-- partial -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.slick/1.4.1/slick.min.js"></script>
    <script src="./script.js"></script>
  </body>
  <script>
      $(".slick-slider").slick({
       slidesToShow:6,
       infinite:true,
       slidesToScroll: 1,
       autoplay: true,
       autoplaySpeed: 800,
        arrow:true,
          prevArrow: '<button class="slide-arrow prev-arrow"><i class="fa-solid fa-caret-left"></i></button>',
    nextArrow: '<button class="slide-arrow next-arrow"><i class="fa-solid fa-caret-right"></i></button>',
         responsive: [{
        breakpoint: 500,
        settings: {
          slidesToShow: 3,
          autoplay: true,
          slidesToScroll: 1,
          centerMode: false,
          autoplaySpeed: 1000,
          infinite:true,
           arrow:true,
        }
      }]
      });
  </script>
</html>

{% schema %}
{
"name": "Collection Slider",
"settings": [
  {
    "type":"text",
    "id":"headtext",
    "label":"heading"
  },
  {
        "type":"color",
        "id":"clr",
        "label":"Select Color",
        "default":"#000000"
      },
  {
"type": "radio",
"id": "textalign",
"label": "Text align",
"options": [
{
"value": "center",
"label": "center"
},
{
"value": "left",
"label": "left"
}

],
"default": "center"
},
  {
        "type":"color",
        "id":"collection_clr",
        "label":"collection heading color",
        "default":"#000000"
      },
   {
        "type":"color",
        "id":"brclr",
        "label":"Select border Color",
        "default":"#000000"
      }

],
"blocks": [
  {
    "type": "collection",
    "name": "Collection",
    "settings": [
      {
        "type":"text",
        "id":"collhed",
        "label":"Collection Heading"
      },
      {
        "type":"image_picker",
        "id":"imgpic",
        "label":"select collection"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Select collection"
      },

       {
"type": "radio",
"id": "descriptionalign",
"label": "Text align",
"options": [
{
"value": "center",
"label": "center"
},
{
"value": "left",
"label": "left"
}
],
"default": "center"
}
    ]
  }
],
"presets": [
{
"name": "Collection Slider 2",
"category": "Slider"
}
]
}
{% endschema %}