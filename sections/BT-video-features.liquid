{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% liquid
  # Get highest ratio
  # --------------------------------------------------------------------------------
  assign highest_ratio = 0

  for block in section.blocks
    if block.settings.video.aspect_ratio > highest_ratio
      assign highest_ratio = block.settings.video.aspect_ratio
    endif
  endfor

  # Setup image size
  # --------------------------------------------------------------------------------
  assign image_size = 400 | times: section.settings.columns_desktop | append: 'x'
%}

<dc-video-features
  class="dc-vf section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} color-{{ section.settings.scheme }}"
  id="{{ section.id }}"
  {% if settings.animations_reveal_on_scroll %}
    data-cascade
  {% endif %}
>
  <div class="dc-vf__container page-width">
    <div
      class="dc-vf__list{% unless section.settings.enable_carousel %} grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% endunless %}"
      id="Slider-{{ section.id }}"
      role="list"
      {% if section.settings.enable_carousel %}
        data-carousel
      {% endif %}
    >
      {%- for block in section.blocks -%}
        <div
          class="dc-vf__item{% unless section.settings.enable_carousel %} grid__item{% endunless %}"
          style="--dc-width-mobile: {{ 100 |  divided_by: section.settings.columns_mobile }}%;--dc-width-desktop: {{ 100 |  divided_by: section.settings.columns_desktop }}%;"
        >
          <dc-video
            class="dc-vf__video"
            data-modal-id="{{ section.id }}-{{ block.id }}"
            style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
          >
            {{
              block.settings.video
              | video_tag:
                image_size: image_size,
                autoplay: true,
                loop: block.settings.enable_video_looping,
                controls: false,
                muted: true,
                class: 'dc-vf__video-element'
            }}
            {%- if block.settings.product != blank -%}
              {%- assign product = block.settings.product -%}
              <a href="{{ product.url | within: collection }}" class="dc-vf__product-overlay">
                <div class="dc-vf__product">
                  {%- if product.featured_media -%}
                    <picture class="dc-vf__product-media">
                      {{
                        product.featured_media
                        | image_url: width: 80
                        | image_tag:
                          sizes: '(min-width: 400px) 80px, (min-width: 750px) 100px, 150px',
                          widths: '50, 80, 100, 150 ,200',
                          loading: 'lazy',
                          class: 'motion-reduce'
                      }}
                    </picture>
                  {%- endif -%}
                  <div class="dc-vf__product-information">
                    <span class="dc-vf__product-title h5">{{ product.title | truncate: 40 }}</span>
                    {% render 'price',
                      product: product,
                      use_variant: false,
                      show_badges: false,
                      price_class: 'dc-vf__product-price',
                      show_compare_at_price: true
                    %}
                  </div>
                </div>
              </a>
            {%- endif -%}
          </dc-video>
        </div>
      {%- endfor -%}
    </div>
  </div>
</dc-video-features>

{%- for block in section.blocks -%}
  <dc-video-modal class="dc-vf__modal hidden" id="VideoModal-{{ section.id }}-{{ block.id }}">
    <button class="dc-vf__modal-close" type="button" aria-label="{{ 'accessibility.close' | t }}" data-close>
      {% render 'icon-close' %}
    </button>
    <template>
      {{
        block.settings.video
        | video_tag:
          image_size: '1100px',
          autoplay: true,
          loop: block.settings.enable_video_looping,
          controls: true,
          muted: false
      }}
    </template>
    {%- if block.settings.product -%}
      {%- assign product = block.settings.product -%}
      <div class="dc-vf__product">
        {%- if product.featured_media -%}
          <picture class="dc-vf__product-media">
            {{
              product.featured_media
              | image_url: width: 80
              | image_tag:
                sizes: '(min-width: 400px) 80px, (min-width: 750px) 100px, 150px',
                widths: '50, 80, 100, 150 ,200',
                loading: 'lazy',
                class: 'motion-reduce'
            }}
          </picture>
        {%- endif -%}
        <div class="dc-vf__product-information">
          <span class="dc-vf__product-title h5">{{ product.title }}</span>
          {% render 'price',
            product: product,
            use_variant: false,
            show_badges: false,
            price_class: 'dc-vf__product-price',
            show_compare_at_price: true
          %}
          <a
            href="{{ product.url }}"
            role="link"
            aria-label="{{ product.title }}"
            class="link link--text focus-inset"
          >
            {{- block.settings.view_details_text -}}
          </a>
        </div>
      </div>
    {%- endif -%}
  </dc-video-modal>
{%- endfor -%}

{% schema %}
{
  "name": "Video features",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "scheme",
      "label": "Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "t:sections.multicolumn.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "t:sections.multicolumn.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.multicolumn.settings.columns_mobile.options__2.label"
        }
      ],
      "default": "1",
      "label": "t:sections.multicolumn.settings.columns_mobile.label"
    },
    {
      "type": "checkbox",
      "id": "enable_carousel",
      "label": "Enable Carousel",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_video_looping",
          "label": "t:sections.video.settings.enable_video_looping.label",
          "default": true
        },
        {
          "type": "header",
          "content": "t:sections.video.settings.header__1.content"
        },
        {
          "type": "video",
          "id": "video",
          "label": "t:sections.video.settings.video.label"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Video description"
        },
        {
          "type": "header",
          "content": "Product"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "view_details_text",
          "label": "View detail text",
          "default": "View details"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video features",
      "blocks": []
    }
  ]
}
{% endschema %}
